<div id="content-wrapper">
  <div class="container-fluid">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fas fa-table"></i>
        Default Users Table
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Date Joined</th>
                <th>Promote</th>
              </tr>
            </thead>
            <tbody>
              <% @default_users.each do |user| %>
                <tr id="user-<%= user.id %>">
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.created_at %></td>
                  <td><%= button_to "Upgrade to Merchant", root_path, class:"btn btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>  
</div>