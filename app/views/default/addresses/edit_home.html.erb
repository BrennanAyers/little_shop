<h2>Update an Address</h2>
<% @user.errors.full_messages.each do |msg| %>
  <%= msg %>
<% end %>

<%= form_for @user, url: update_home_address_path(@user.id) do |f| %>

  <%= f.label :address_nickname %>
  <%= f.text_field :address_nickname %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= submit_tag 'Update Address' %>

<% end %>
