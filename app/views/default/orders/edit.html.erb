<h2>Change Address for <%= @order.id %></h2>

<% @other_addresses.each do |address| %>
  <section id="address-<%= address.id %>">
    <p>Address Nickname:
      <% if address.modifiable? %>
        <%= link_to address.nickname, edit_profile_address_path(address) %>
      <% else %>
        <%= address.nickname %>
      <% end %>
    </p>
    <p>Address: <%= address.address %></p>
    <p>City: <%= address.city %></p>
    <p>State: <%= address.state %></p>
    <p>Zip Code: <%= address.zip %></p>
    <%= button_to "Change Shipping to #{address.nickname} Address", profile_order_path(@order, address_id: address.id), method: :patch %>
  </section>
<% end %>
