

<h2><%= @user.name %></h2>

<p>Email: <%= @user.email %></p>
<p>Role: <%= @user.role %></p>
<p>Active: <%= @user.active %></p>

<h2>Addresses</h2>

<br>
<div class="add-address">
  <%= link_to 'Add address', new_address_path %>
</div>
<br>
<section class="home-address">
  <br>
  <h3>Home Address</h3>
  <br>
  <p>Street: <%= @user.address %></p>
  <p>City: <%= @user.city %></p>
  <p>State: <%= @user.state %></p>
  <p>Zip Code: <%= @user.zip %></p>
  <br>
  <%= link_to 'Update address', edit_home_address_path(@user.id)  %>
</section>
<br>
<br>
  <h3>Other Addresses</h3>
  <% @user.addresses.each do |address| %>
    <section id="other-address-<%= address.id %>">
      <p>Nickname: <%= address.nickname %></p>
      <p>Street: <%= address.street %></p>
      <p>City: <%= address.city %></p>
      <p>State: <%= address.state %></p>
      <p>Zip: <%= address.zip %></p>
      <br>
      <%= link_to 'Update address', edit_non_home_address_path(address.id)  %>
      <br>
      <%= link_to 'Delete address', profile_addresses_path(address.id), method: :delete   %>
      <br>
    </section>
  <% end %>
<br>
<br>



<%= link_to "Edit Profile", profile_edit_path %>

<% if @user.orders.length > 0 %>
  <%= link_to "My Orders", profile_orders_path %>
<% end %>
