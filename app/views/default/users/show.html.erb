

<h2><%= @user.name %></h2>

<p>Email: <%= @user.email %></p>
<p>Role: <%= @user.role %></p>
<p>Active: <%= @user.active %></p>
<% @user.addresses.each do |address| %>
  <section id="address-<%= address.id %>">
    <p>Address Nickname: <%= link_to address.nickname, edit_address_path(address) %></p>
    <p>Address: <%= address.address %></p>
    <p>City: <%= address.city %></p>
    <p>State: <%= address.state %></p>
    <p>Zip Code: <%= address.zip %></p>
    <%= link_to "Delete #{address.nickname} Address", address_path(address), method: :delete %>
  </section>
<% end %>
<%= link_to "New Address", new_address_path %>

<%= link_to "Edit Profile", profile_edit_path %>

<% if @user.orders.length > 0 %>
  <%= link_to "My Orders", profile_orders_path %>
<% end %>
