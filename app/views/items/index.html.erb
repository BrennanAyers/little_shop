<h1>Items</h1>
<section id='top-stats'>
  <h4>Most Purchased Items</h4>
  <% @most_5_bought_items.each do |item| %>
    <p class='stat_items'><%= item.name %></p>
    <p class='stat_items'>Total Bought: <%= item.order_quantity %></p>
  <% end %>
</section>
<section id='bottom-stats'>
  <h4>Least Purchased Items</h4>
  <% @least_5_bought_items.each do |item| %>
    <p class='stat_items'><%= item.name %></p>
    <p class='stat_items'>Total Bought: <%= item.order_quantity %></p>
  <% end %>
</section>
<% @items.each do |item| %>
  <section id='item-<%= item.id %>'>
    <%= link_to item.name, item_path(item) %>
    <%= item.user.name %>
    <%= item.inventory %>
    <%= item.price %><br>
    <a class='image_link' href="<%= item_path(item) %>"><img class='small-item-img' src="<%= item.image %>"></a>
  </section>
<% end %>
