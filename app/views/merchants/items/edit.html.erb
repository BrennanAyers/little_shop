<h2>Edit <%= @item.name %>'s Information</h2>

<%= form_for @item, url: profile_edit_path do |f| %>

<p><%= f.label :name %></p>
<%= f.text_field :name %>

<p><%= f.label :description %></p>
<%= f.text_field :description %>

<p><%= f.label :image %></p>
<%= f.text_field :image %>

<p><%= f.label :price %></p>
<%= f.text_field :price %>

<p><%= f.label :inventory %></p>
<%= f.text_field :inventory %>

<%= f.submit "Edit Item" %>

<% end %>
